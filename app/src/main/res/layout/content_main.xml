<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dsme.myfinance.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/container">

    <ScrollView
        style="@style/ScrollView">

        <LinearLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/keyline_content"
            android:paddingLeft="@dimen/keyline_half"
            android:paddingRight="@dimen/keyline_half"
            android:paddingTop="@dimen/keyline_half">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius">

                <FrameLayout
                    android:id="@+id/overviewGraphContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_size_2x"
                    android:layout_below="@+id/toolbar"
                    android:background="?colorPrimary"
                    android:elevation="@dimen/elevation_header"
                    tools:ignore="UnusedAttribute">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                app:cardCornerRadius="@dimen/card_radius">

                <com.code44.finance.ui.reports.trends.TrendsChartView
                    android:id="@+id/trendsChartView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
