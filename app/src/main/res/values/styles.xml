<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- Button -->
    <!-- =========================================================================================================== -->

    <style name="Button" />

    <style name="Button.Flat">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Button.Flat.ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Small">
        <item name="android:minHeight">@dimen/min_touch_size</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Flat.Select">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Flat.Calc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Calc.Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Calc.Action.Landscape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button.Flat.Dialog">
        <item name="android:minWidth">@dimen/btn_dialog_min_width</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.67dp</item>
        <item name="android:background">?android:dividerHorizontal</item>
    </style>

    <style name="Divider.Thick">
        <item name="android:layout_height">1.34dp</item>
    </style>

    <!-- ImageView -->
    <!-- =========================================================================================================== -->

    <style name="ImageView">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageView.Form">
        <item name="android:layout_width">@dimen/action_item</item>
        <item name="android:layout_height">@dimen/action_item</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/action_item_to_keyline_content</item>
    </style>

    <!-- CheckBox -->
    <!-- =========================================================================================================== -->

    <style name="CheckBox" />

    <style name="CheckBox.Field">
        <item name="android:paddingLeft">@dimen/keyline</item>
    </style>

    <style name="AdapterView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="AdapterView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="AdapterView.NoDivider.NoSelector">
        <item name="android:listSelector">#0000</item>
    </style>

    <style name="AdapterItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/keyline</item>
        <item name="android:paddingRight">@dimen/keyline</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>

    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/monsoon</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
    </style>

</resources>
